{% extends 'base.html.twig' %}
{% block title %}Task Dashboard{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-8">
            <div class="progress-wrapper">
                <div class="progress-header">
                    <h2>Tasks: {{ numberOfFinishedTasks }} von {{ maxValue }} erledigt...</h2>
                    <div class="progress-actions">
                        <i class="fas fa-th-list"></i>
                        <i class="fas fa-th"></i>
                    </div>
                </div>
                <div class="progress mb-3">
                    <div class="progress-bar progress-bar-striped bg-success" role="progressbar" style="width: {{ procent }}%"
                         aria-valuenow="25" aria-valuemin="0" aria-valuemax="{{ maxValue }}"></div>
                </div>
            </div>
            {{ include('inc/cardList.html.twig') }}
        </div>
        <div class="col-4">
            {{ include('inc/dayPlanListCards.html.twig')}}
        </div>
    </div>
{% endblock %}